<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/light_blue"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@color/light_gray"
        android:layout_gravity="center_vertical"
    >
        <TextView
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textColor="@color/text_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_username"
                style="@style/LoginIcon"/>

            <EditText
                android:id="@+id/emailET"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                style="@style/LoginEditText"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_password"
                style="@style/LoginIcon"/>
            <EditText
                android:id="@+id/passwordET"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                style="@style/LoginEditText"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_client_id"
                style="@style/LoginIcon"/>
            <EditText
                android:id="@+id/siteIdET"
                android:hint="@string/prompt_site_id"
                style="@style/LoginEditText"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_site_id"
                style="@style/LoginIcon" />
            <EditText
                android:id="@+id/customerIdET"
                android:hint="@string/prompt_customer_id"
                style="@style/LoginEditText"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_login_form"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >
            <Button
                style="@style/Button.light_blue"
                android:id="@+id/loginBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/action_sign_in"
                android:layout_marginRight="5dp"
            />
            <Button
                style="@style/Button.light_blue"
                android:id="@+id/loginNoCloudBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/action_sign_in_no_cloud"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/versionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@color/gray"
            android:gravity="right"
            android:text="version"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/forgotPasswordTV"
            android:textSize="@dimen/font_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="@string/forgot_password_question"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/newUserTV"
            android:textSize="@dimen/font_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="@string/new_user_question"
        />

    </LinearLayout>


</LinearLayout>




