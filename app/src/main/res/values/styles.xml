<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back_arrow</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_back_arrow</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>

    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back_arrow</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_back_arrow</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="LoonActionBarTheme"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/LoonActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/LoonActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="LoonActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/light_blue</item>

        <!-- Support library compatibility -->
        <item name="background">@color/light_blue</item>
    </style>

    <style name="LoonTitle"
        parent="@style/LoonActionBarTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginEditText">
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/half_white_rounded_square</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LoginIcon">
        <item name="android:background">@drawable/half_blue_rounded_square</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="DrawerItemText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LoonTabBar">
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Button.orange">
        <item name="android:background">@drawable/button_gradient_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.light_blue">
        <item name="android:background">@drawable/button_light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.dark_green">
        <item name="android:background">@drawable/button_light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.dark_orange">
        <item name="android:background">@drawable/button_dark_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkHeader">
        <item name="android:background">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Toggle">
        <item name="android:background">@drawable/toggle_button_bgc</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:layout_width">75px</item>
        <item name="android:layout_height">34px</item>
    </style>


</resources>
