<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoonActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/LoonActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/LoonActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="LoonActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/dark_green</item>

        <!-- Support library compatibility -->
        <item name="background">@color/dark_green</item>
    </style>

    <style name="LoonTitle"
        parent="@style/LoonActionBarTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginEditText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/border_bottom_gray</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="DrawerItemText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="Button.orange">
        <item name="android:background">@drawable/button_gradient_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.aquamarine">
        <item name="android:background">@drawable/button_gradient_aquamarine</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkHeader">
        <item name="android:background">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
